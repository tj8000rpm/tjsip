<scenario name="Basic Sipstone UAC">
  <!-- In client mode (sipp placing calls), the Call-ID MUST be         -->
  <!-- generated by sipp. To do so, use [call_id] keyword.                -->

  <nop hide="true">
    <action>
      <assignstr assign_to="orig_branch" value="[branch]" />
    </action>
  </nop>

  <!--
      Call-ID: [call_id]
  -->

  <send>
    <![CDATA[

      REGISTER sip:[remote_ip]:[remote_port] SIP/2.0
      Via: SIP/2.0/[transport] example.com;branch=[$orig_branch]
      From: sipp <sip:sipp@[local_ip]:[local_port]>;tag=[pid]SIPpTag00[call_number]
      To: <sip:sipp@[local_ip]:[local_port]>
      CSeq: 1 REGISTER
      Call-ID: [call_id]
      Max-Forwards: 70
      Subject: Performance Test
      Contact: <sip:sipp@[local_ip]:[local_port]>;epires=900

    ]]>
  </send>

  <recv response="200" optional="true" next="end"> </recv>
  <recv response="400" optional="true" next="end"> </recv>
  <recv response="483" optional="true" next="end"> </recv>
  <recv response="500" optional="true" next="end"> </recv>

  <label id="end" />

  <!-- definition of the response time repartition table (unit is ms)   -->
  <ResponseTimeRepartition value="10, 20, 30, 40, 50, 100, 150, 200"/>

  <!-- definition of the call length repartition table (unit is ms)     -->
  <CallLengthRepartition value="10, 50, 100, 500, 1000, 5000, 10000"/>

</scenario>

